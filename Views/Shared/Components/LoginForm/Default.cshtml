@model ASP.NETCore.Models.LoginViewModel

<form class="nav-link login-form display-none" asp-area="" asp-controller="Auth" asp-action="Login" method="POST">
    <div class="form-group">
        <input placeholder="Username" name="Username" class="form-control login-input" required />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input placeholder="Password" name="Password" class="form-control login-input" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button class="create" type="submit">Login</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}